{% extends 'base.html.twig' %}

{% block title %}Hello BSXController!{% endblock %}

{% block body %}
    <h1>Notes</h1>
    <a href="/notes/add" class="btn btn-primary">ADD NEW NOTE</a>
    <a href="/" class="btn btn-primary">MAIN</a>

    <table class="table table-bordered table-responsive">
        <tr>
            <td colspan="22">Notes and Comments</td>
        </tr>
        
        <tr>
            <th>Title</th>
            <th>Date Created</th>
            <th>Note</th>
            <th>Actions</th>
        </tr>

        {% for note in notes %}
            <tr data-id="{{ note.id }}">
                <td>{{ note.dateCreated|date("m/d/Y") }}</td>
                <td>{{ note.title }}</td>
                <td>{{ note.body }}</td>
                <td><a href="/notes/delete/{{ note.id }}" class="btn btn-danger">Delete</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
